{
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "./",
        "sourceMap": true,
        "target": "es2021",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "esModuleInterop": true
    },
    "include": [
        "bin.ts",
        "src/**/*"
    ],
    "exclude": [
        "test/**/*"
    ]
}
